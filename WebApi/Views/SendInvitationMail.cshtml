@using Microsoft.Extensions.Configuration;
@inject IConfiguration configuration;
@model Persistence.Messaging.Models.SendInvitation
@{
    Layout = null;
    //var appBaseUrl = configuration.GetValue<string>("Urls:BaseUrl");
    var verifyUserUrl = configuration.GetValue<string>("Urls:VerifyUserUrl");
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width">
    <title>My Email Template</title>
    <style>
        /* Reset styles */
        body,
        body * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        /* Global styles */
        body {
            background-color: #f5f5f5;
            color: #333;
            font-family: Arial, sans-serif;
            font-size: 16px;
            line-height: 1.5;
            text-align: left;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header styles */
        .header {
            background-color: #eee;
            border-bottom: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }

        /* Content styles */
        .content {
            background-color: #fff;
            border: 1px solid #ccc;
            padding: 20px;
        }

        /* Footer styles */
        .footer {
            background-color: #eee;
            border-top: 1px solid #ccc;
            padding: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>Employee Invitation Mail</h1>
        </div>
        <div class="content">
            <p>Hello @Model.Name,</p>
            <p>This is an Invitation mail (@Model.Email); you have been invited to Troo-X as @string.Join(",", Model.Roles). Kindly click this link to accept the invite</p>
            <a href="@verifyUserUrl/@Model.Token">Link Here</a>
        </div>
        <div class="footer">
            <p>&copy; 2023 TROO-X. All rights reserved.</p>
        </div>
    </div>
</body>
</html>

